{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Esegui Reader con numero di riga",
            "type": "shell",
            "command": "./script_exec.sh",
            "args": [
                "${file}", 
                "${lineNumber}"
            ],
            "options": {
                "cwd": "src"    
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ]
}
